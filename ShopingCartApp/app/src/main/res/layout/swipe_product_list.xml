<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:gravity="center"
    android:orientation="vertical">


    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/spl_product_Imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/spl_left_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/spl_product_Static_Name_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Name" />

        <TextView
            android:id="@+id/spl_product_Static_Category_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="3dp"
            android:text="Category : " />

        <TextView
            android:id="@+id/spl_product_static_price_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="15dp"
            android:text="Price"/>




    </LinearLayout>


    <LinearLayout
        android:id="@+id/spl_right_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/spl_product_Name_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:singleLine="true"
            android:text="Product Name" />


    <TextView
        android:id="@+id/spl_product_Category_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="3dp"
        android:text="Category" />

        <TextView
            android:id="@+id/spl_product_price_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="3dp"
            android:text="299.00" />

    </LinearLayout>

    </LinearLayout>


</LinearLayout>